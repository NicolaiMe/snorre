{
  "compilerOptions": {
    "target": "es2015",
    "declarationDir": "lib",
    "outDir": "lib",
    "rootDir": "src",
    "emitDeclarationOnly": true,
    "lib": ["dom", "esnext"],
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "pretty": true,
    "removeComments": false,
    "strict": true,
    "composite": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["lib", "test", "node_modules"]
}
